        <Line X1="0" Y1="101" X2="339" Y2="101" Stroke="Black" StrokeThickness="4"/>
        <Line X1="0" Y1="219" X2="339" Y2="219" Stroke="Black" StrokeThickness="4"/>

        <Rectangle x:Name="Cell0" Canvas.Left="1" Canvas.Top="-4" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
        <Rectangle x:Name="Cell1" Canvas.Left="113" Canvas.Top="-4" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
        <Rectangle x:Name="Cell2" Canvas.Left="226" Canvas.Top="-4" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
        <Rectangle x:Name="Cell3" Canvas.Left="1" Canvas.Top="110" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
        <Rectangle x:Name="Cell4" Canvas.Left="113" Canvas.Top="110" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
        <Rectangle x:Name="Cell5" Canvas.Left="226" Canvas.Top="110" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
        <Rectangle x:Name="Cell6" Canvas.Left="1" Canvas.Top="225" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
        <Rectangle x:Name="Cell7" Canvas.Left="113" Canvas.Top="225" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
        <Rectangle x:Name="Cell8" Canvas.Left="226" Canvas.Top="225" Width="100" Height="100" Fill="Transparent" MouseDown="Cell_MouseClick"/>
    </Canvas>
</Window>